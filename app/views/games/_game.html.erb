<p class="lead">
  <% if game.finished? %>
    <% if game.status == "won" %>
      <strong>Victoire de <%= game.winner %> !</strong>
    <% else %>
      <strong>Match nul !</strong>
    <% end %>
  <% else %>
    Au tour de <strong><%= game.current_player %></strong>
  <% end %>
</p>

<%= render partial: "board", locals: { game: game } %>

<div class="mt-4">
  <%= link_to "Nouvelle partie", root_path, data: { turbo_frame: "_top" }, class: "btn btn-secondary" %>
</div>
